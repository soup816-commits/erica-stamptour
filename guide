    <!-- êµ¬ê¸€ ì‚¬ì´íŠ¸ í™˜ê²½ì— ë§ì¶° ì•ˆì „í•œ ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ë“±ë¡ ë°©ì‹ìœ¼ë¡œ ë³€ê²½ -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const buttons = document.querySelectorAll('.lang-switch-btn');
            const contents = document.querySelectorAll('.tab-content');

            buttons.forEach(btn => {
                btn.addEventListener('click', () => {
                    const targetLang = btn.getAttribute('data-lang');

                    // 1. ëª¨ë“  ì½˜í…ì¸  ìˆ¨ê¸°ê¸°
                    contents.forEach(content => {
                        content.classList.remove('block');
                        content.classList.add('hidden');
                    });
                    
                    // 2. ëª¨ë“  ë²„íŠ¼ ìŠ¤íƒ€ì¼ ì´ˆê¸°í™”
                    buttons.forEach(b => {
                        b.className = 'lang-switch-btn px-3 py-2 sm:px-4 sm:py-2 text-sm sm:text-base rounded-full bg-white text-slate-600 font-bold shadow-sm border border-slate-200 transition-all hover:bg-slate-100 focus:outline-none';
                    });

                    // 3. ì„ íƒëœ ì½˜í…ì¸  ë³´ì´ê¸°
                    const targetContent = document.getElementById(`content-${targetLang}`);
                    if(targetContent) {
                        targetContent.classList.remove('hidden');
                        targetContent.classList.add('block');
                    }
                    
                    // 4. ì„ íƒëœ ë²„íŠ¼ ê°•ì¡°
                    btn.className = 'lang-switch-btn px-3 py-2 sm:px-4 sm:py-2 text-sm sm:text-base rounded-full bg-blue-600 text-white font-bold shadow-md transition-all hover:bg-blue-700 hover:shadow-lg focus:outline-none';
                });
            });
        });
    </script>
